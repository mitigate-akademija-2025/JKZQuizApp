<div class="container"
<div class="d-flex flex-column justify-content-between h-100">
  <div>
    <%= render(layout: 'entries/entry_name', locals: { entry: entry }) do %>
      <div class="d-flex align-items-center justify-content-between flex-grow-1">
       <%= turbo_frame_tag :entry_name, class: 'w-100' do %>
      <h1 class="mb-0"><strong><%= entry.name %></strong></h1>
    <% end %>
          <div class="dropdown">
          <button class="btn btn-outline-light border-0 text-dark me-3" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-three-dots-vertical"></i>
          </button>
          <ul class="dropdown-menu">
              <li>
              <%= link_to(edit_entry_path(entry, input: :entry_name), data: {turbo_frame: :entry_name}, class: 'dropdown-item') do %>
                <i class="bi bi-pencil-square"></i> Edit Quiz
              <% end %>
            </li>
            <li>
              <%= link_to(entry_path(entry),
               data: {turbo_method: :delete},
               class: 'dropdown-item text-danger') do %>
                <i class="bi bi-trash3-fill"></i> Delete Quiz
              <% end %>
            </li>
            <li>
          <%= link_to(entry_questions_path(entry),
                      class: 'dropdown-item text-info') do %>
            <i class="bi bi-plus-circle-fill"></i> Add Q/A
          <% end %>
        </li>
          </ul>
        </div>
      </div>
    <% end %>

  <div class="mt-5">
            <ul class="list-group">
            <li class="list-group-item">
        <%= turbo_frame_tag(:entry_name) do %>
          <div class="d-flex justify-content-between align-items-center">
            <div class="form-floating d-flex">
              <%= text_field_tag(:name, entry.name,
                readonly: true,
                class: 'form-control-plaintext',
                placeholder: 'Name') %>
              <%= label_tag(:name, "Name", class: 'fw-bold text-dark') %>
            </div>
            <div class="actions">
              <%= link_to(edit_entry_path(entry, input: :entry_name), class: 'btn btn-outline-light border-0 text-dark') do %>
                <i class="bi bi-pencil-square"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </li>
            <li class="list-group-item">
          <div class="d-flex justify-content-between align-items-center">
            <div class="form-floating d-flex">
              <%= text_field_tag(:description, entry.description,
                readonly: true,
                class: 'form-control-plaintext',
                placeholder: 'Description') %>
              <%= label_tag(:description, "Description", class: 'fw-bold text-dark') %>
            </div>
            <div class="actions">
              <%= link_to(edit_entry_path(entry, input: :entry_name), class: 'btn btn-outline-light border-0 text-dark') do %>
              <% end %>
            </div>
          </div>
        </li>
        <div class="list-group">
        <div class="flex-grow-1 mt-4 ms-4 mb-4 ps-1">
        <div class="fw-bold">
          <%= link_to(entry, target: :_blank, rel: 'noopener noreferrer') do %>
            <%= entry.name %> <i class="bi bi-box-arrow-up-right ms-1"></i>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
<div>
  <% if entry.questions.any? %>
  <ul class="list-group mt-3 shadow-sm rounded-3">
    <% entry.questions.each do |question| %>
      <li class="list-group-item py-3">
        <div class="d-flex align-items-start">
          <span class="fw-semibold text-success me-2">Question:</span>
          <span class="flex-grow-1"><%= question.text %></span>
        </div>

        <% if question.answers.any? %>
          <ul class="list-group list-group-flush mt-2 ms-3">
            <% question.answers.each do |answer| %>
              <li class="list-group-item d-flex align-items-start bg-light border-0 border-top py-2">
                <span class="fw-semibold text-dark me-2">Answer:</span>
                <span class="flex-grow-1"><%= answer.answer_text %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-muted mt-2 mb-0 small"><em>No answers yet</em></p>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="alert alert-info mt-3 mb-0"><strong>No questions available</strong></p>
<% end %>
</div>




  <!-- Footer dates at bottom -->
  <div class="text-center mt-3">
    <div>Modified at: <%= format_time(entry.updated_at) %></div>
    <div>Created at: <%= format_time(entry.created_at) %></div>
  </div>
</div>
</div>