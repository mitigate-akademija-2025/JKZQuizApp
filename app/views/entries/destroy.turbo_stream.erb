<%= render_flash_stream %>
<%= turbo_stream.remove(@entry) %>
<%= turbo_stream.update('main_dashboard') do %>
    <% if current_user.entries.any? %>
    <%= render(partial: 'entries/main', locals: { entry: current_user.entries.first }) %>
    <% else %>
    <%= render(html: content_tag(:h1, "No Quizzes Created.",
     class: "h-100 d-flex align-items-center justify-content-center")) %>
    <% end %>
<% end %>
